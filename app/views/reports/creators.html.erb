<% content_for :status_bar do %>
  <h2>Report<%= path_separator %><%= link_to @root_fond_name, dashboard_report_path %><%= path_separator %><%= t('creators') %> </h2>
  <div id="links">
    <%= link_to_index "Report", reports_path %>
  </div>
<% end %>

<div class="span12">
  <div id="index-controls">
    <%= link_to '<i class="icon-download-alt"></i> scarica PDF', creators_report_path(@fond, :format => "pdf"),  {:class => "btn btn-small pdf"}  %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th><%= t('short_fond_type') %></th>
        <th><%= t('name') %></th>
        <th><%= t('date_event') %> </th>
      </tr>
    </thead>
    <tbody>
      <% @creators.each do |creator| %>
        <tr class="pbi_avoid">
          <td><%= show_value(creator.try(:creator_type), "t") %></td>
          <td><%= creator.preferred_name.try(:name) %></td>
          <td class="no-wrap"><%= creator.preferred_event.try(:full_display_date) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>